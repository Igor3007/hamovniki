include ../catalog/minicard/minicard.pug

mixin ap-similar(slider_region)
  section.section-slider-region(id="similar-ap")
    .slider-region
      .slider-region__img-column: +bgimage('/img/common/digits-title.png')
      .slider-region__wrp
        .slider-region__title Квартиры в жилом комплексе Allegoria Mosca
        .swiper-container(data-swiper="region")
          .swiper-wrapper
            each item in [1,2,3,5,6,78]
              .swiper-slide:  +minicard(item)
        .container
          .slider-slider-nav
            .slider-slider-nav__prev: +icons('#ic_swiper-arrow-left')
            .slider-slider-nav__next: +icons('#ic_swiper-arrow-right')

